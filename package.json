{
  "name": "@perp/perp-oracle-contract",
  "version": "0.2.0",
  "description": "",
  "main": "hardhat.config.js",
  "files": [
    "contracts/base",
    "contracts/interface",
    "contracts/ChainlinkPriceFeed.sol",
    "contracts/BandPriceFeed.sol",
    "artifacts/contracts/**/*.json",
    "!artifacts/contracts/**/*.dbg.json",
    "!artifacts/contracts/test/**/*",
    "!artifacts/contracts/base/**/*"
  ],
  "scripts": {
    "clean": "rm -rf typechain && rm -rf artifacts && rm -rf cache",
    "test": "hardhat coverage",
    "build": "hardhat compile",
    "prepare": "husky install",
    "lint": "npm run lint-contracts && npm run lint-tests",
    "lint-contracts": "solhint 'contracts/**/*.sol'",
    "lint-tests": "if grep -qr 'test' -e '.only('; then echo 'found .only() in tests'; exit 1; else echo 'not found .only() in tests'; fi",
    "lint-staged": "lint-staged"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@chainlink/contracts": "0.1.7",
    "@defi-wonderland/smock": "2.0.7",
    "@nomiclabs/hardhat-ethers": "2.0.2",
    "@nomiclabs/hardhat-waffle": "2.0.1",
    "@openzeppelin/contracts": "3.4.0",
    "@typechain/ethers-v5": "7.2.0",
    "@typechain/hardhat": "2.3.1",
    "@types/chai": "4.2.18",
    "@types/mocha": "9.0.0",
    "@types/node": "15.6.1",
    "chai": "4.3.4",
    "eslint-config-prettier": "8.3.0",
    "ethereum-waffle": "3.4.0",
    "ethers": "5.5.1",
    "hardhat": "2.6.7",
    "husky": "6.0.0",
    "lint-staged": "11.0.0",
    "mocha": "9.1.1",
    "prettier": "2.3.0",
    "prettier-plugin-solidity": "1.0.0-beta.11",
    "solc": "0.7.6",
    "solhint": "3.3.6",
    "solhint-plugin-prettier": "0.0.5",
    "solidity-coverage": "0.7.17",
    "ts-generator": "0.1.1",
    "ts-node": "10.0.0",
    "typechain": "5.2.0",
    "typescript": "4.3.2"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write"
    ],
    "*.sol": [
      "prettier --write",
      "solhint"
    ]
  }
}
